  <!-- Modal Signup-->
  {{!-- {{#if mostrarModal}} --}}
  <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true" >
    <div class="modal-dialog">
      <div class="modal-content bg-dark">
        <div class="modal-header">
          <img src="../img/logo.png" class="modalLogo">
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-5">
          <h3 style="color: aliceblue;">Regístrate</h3>
          <form class="needs-validation"  id="signup-form" action="/" method="POST" novalidate>



  <div class="has-validation position-relative">
    <label for="nombre" class="formulario_label"> Nombre:</label>
     <input type="text" id="signup-nombre" class="formulario__input form-control mb-3" placeholder="Nombre" name="nombre" required>
     <span></span>
     <div class="valid-tooltip">
      Excelente!
     </div>
     <div class="invalid-tooltip">
      Que hace bro
     </div>
  </div>

  <div class="has-validation position-relative">
     <label for="apellidos">Apellidos:</label>
      <input type="text" id="signup-apellidos" class="form-control mb-3" placeholder="Apellidos" name="apellidos" required>
      <span></span>
  </div>
  
  <div class="has-validation position-relative">
     <label for="telefono">Telefono:</label>
      <input type="text" id="signup-telefono" class="form-control mb-3" placeholder="Telefono" name="telefono" required>
      <span></span>
  </div>

  <div class="has-validation position-relative">
      <label for="email">Email:</label>
      <input type="text" id="signup-email" class="form-control mb-3" placeholder="Email" name="email" required>
      <span style="color: red;">{{#if error}}{{error}}{{/if}}</span>
  </div>

   <div class="has-validation position-relative">
       <label for="password">Password:</label>
        <input type="password" id="signup-password" class="form-control mb-3" placeholder="Contraseña" name="password" required>
        <span></span>
  </div>
  <br>
  <button id="enviarSignup" type="submit" class="btn btn-primary" value="registro">Registrate</button>
          
         
            
</div>
           
            

           

           

          
          </form>
          <form action="/comprobar">
           <button id="prueba">PRUEBA</button>
           </form>
         
          
        </div>
      </div>
    </div>
  </div>


  <!-- Modal Signin-->
  <div class="modal fade" id="signinModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalSignin"
    aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content bg-dark">
        <div class="modal-header">
          <img src="../img/logo.png" class="modalLogo">
          
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="login-form" action="/signin" method="POST">
          <h3 style="color: aliceblue;">Inicia sesión</h3>
            <label for="email">Email</label>
            <input type="text" id="login-email" class="form-control mb-3" placeholder="Email" name="email" required>
            <label for="password">Password:</label>
            <input type="password" id="login-password" class="form-control mb-3" placeholder="Contraseña" name="password" required>
<br>
            <button type="submit" class="btn btn-success w-100 mb-4">Login</button>

          
          </form>
        </div>
      </div>
    </div>
  </div>


